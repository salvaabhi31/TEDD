<!Doctype html>
<html>
    <head>
        <title>
            DataBase
        </title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
        <link rel="stylesheet" href="/stylesheets/main.css">
        <script rel="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.1/js/all.min.js"></script>
        <script
         src="https://code.jquery.com/jquery-3.5.1.min.js"
         integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
         crossorigin="anonymous">
            
        </script>
    </head>
     <body>
        <div class="fluid-container">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="/students">TEDD <i class="fa fa-database" aria-hidden="true"></i></a>
             <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
             <span class="navbar-toggler-icon"></span>
             </button>
               
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    
                    
                    <ul class="nav navbar-nav navbar-right ml-md-auto">
                           
                          <% if(!currentUser){ %>
                            <li class="nav-item">
                                <a class="nav-link" href="/login">
                                 Log in <i class="fa fa-user-circle" aria-hidden="true"></i>
                                </a>
                                  
                            </li>
                             <li class="nav-item">
                                <a class="nav-link" href="/register">
                                 Sign-up <i class="fa fa-bell" aria-hidden="true"></i>
                                </a>
                                  
                            </li>
                            <% } else { %>
                             <li class="nav-item">
                                <a class="nav-link" href="/student/new">
                                 Create Student <i class="fa fa-bars" aria-hidden="true"></i>
                                </a>
                                  
                            </li>
                            <li class="nav-item ">
                                <a class="nav-link text-success" href="#">
                                 signed in as <%= currentUser.username %>
                                </a>
                                  
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/logout">
                                 LogOut <i class="fa fa-user-circle" aria-hidden="true"></i>
                                </a>
                                  
                            </li>
                            
                         <% } %>
                    </ul>
               </div>
          </nav>
      </div> 
      
       <div class="container">
         <% if(error && error.length>0){ %>
         <div class="alert alert-danger mt-2" role="alert">
             <%= error%>
         </div>
         <% }%>
         <% if(success && success.length>0){ %>
         <div class="alert alert-success mt-2" role="alert">
             <%= success%>
         </div>
         <% }%>
     </div>